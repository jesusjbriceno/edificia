---
import '@/styles/global.css';
import ToastContainer from '@/components/ui/ToastContainer';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "EDIFICIA - Redacci√≥n de Memorias de Proyecto" } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | EDIFICIA</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Manrope:wght@300;400;500;600;700&display=swap" rel="stylesheet">
	</head>
	<body class="bg-dark-bg text-white selection:bg-brand-primary/30 min-h-screen flex flex-col">
		<slot />
		<ToastContainer client:load />
	</body>
</html>
