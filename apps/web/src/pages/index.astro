---
import BaseLayout from '@/layouts/BaseLayout.astro';
import LoginForm from '@/components/LoginForm';
---

<BaseLayout title="Acceso">
	<main class="min-h-screen grid grid-cols-1 lg:grid-cols-2 bg-dark-bg overflow-hidden">
		<!-- Lateral Izquierdo: Imagen Estructural (Variante 2) -->
		<div class="hidden lg:block relative overflow-hidden border-r border-white/5">
			<img 
				src="/images/login_bg_architectural.png" 
				alt="Arquitectura Minimalista" 
				class="absolute inset-0 w-full h-full object-cover opacity-40 mix-blend-luminosity scale-110 hover:scale-100 transition-transform duration-10000"
			/>
			<div class="absolute inset-0 bg-linear-to-t from-dark-bg via-transparent to-dark-bg/50"></div>
			
			<div class="absolute bottom-12 left-12 right-12 space-y-4">
				<div class="h-1 w-12 bg-brand-primary rounded-full"></div>
				<blockquote class="text-2xl font-light italic text-gray-300 leading-relaxed">
					"La arquitectura es la ordenación de la luz; la escultura es el juego de la luz."
				</blockquote>
				<p class="text-xs uppercase tracking-widest text-brand-primary font-bold">
					Edificia • Redacción Inteligente
				</p>
			</div>
		</div>

		<!-- Lateral Derecho: Formulario -->
		<div class="flex items-center justify-center p-4">
			<LoginForm client:load />
		</div>
	</main>
</BaseLayout>
