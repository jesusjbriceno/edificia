---
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title="Página no encontrada">
  <div class="flex-1 flex items-center justify-center min-h-screen">
    <div class="text-center space-y-6 px-6">
      <!-- 404 number -->
      <p class="text-8xl font-bold tracking-tighter text-brand-primary/20 select-none">404</p>

      <!-- Message -->
      <div class="space-y-2">
        <h1 class="text-2xl font-bold text-white">Página no encontrada</h1>
        <p class="text-gray-400 max-w-md mx-auto">
          La ruta que buscas no existe o ha sido movida. Comprueba la URL o vuelve al panel principal.
        </p>
      </div>

      <!-- Actions -->
      <div class="flex items-center justify-center gap-4 pt-4">
        <a
          href="/dashboard"
          class="inline-flex items-center gap-2 h-11 px-6 text-sm font-semibold rounded-lg bg-gradient-to-r from-brand-primary to-blue-500 text-white shadow-lg shadow-brand-primary/20 hover:scale-[1.02] active:scale-95 transition-all"
        >
          Ir al Dashboard
        </a>
        <a
          href="/"
          class="inline-flex items-center gap-2 h-11 px-6 text-sm font-semibold rounded-lg bg-transparent border border-white/20 text-white hover:bg-white/10 transition-all"
        >
          Inicio
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
